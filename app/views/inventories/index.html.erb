<div class="panel">
  <%if @products.nil?  %>
  <div class="row">
    <div class="small-8 large-centered columns">
      <h1 align="center">Aun no se ha registrado ningun inventario</h1>
    </div>
    <%else%>
    <div class="row">
      <div class="small-12 large-centered columns">
        <h1>Inventario - La Cicler√≠a</h1>
      </div>
      <div class="small-12 large-centered columns">
        <table>
          <thead>
            <tr>
              <th>Producto</th>
              <th>Referencia</th>
              <th>Cantidad</th>
              <th>Fecha de registro</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @products.each do |inventory| %>
            <tr>
              <td><%= inventory[0] %></td>
              <td><%= inventory[1] %></td>
              <td><%= inventory[2] %></td>
              <td><%= inventory[3]%></td>
              <td><%= link_to 'Ver', inventory_path(:id => inventory[4]), class: "small button success" %></td>
              <td><%= link_to 'Eliminar', inventory_path(:id => inventory[4]), method: :delete, class: "small button alert" , data: { confirm: 'Esta seguro?'} %></td>
            </tr>
            <% end %>
          </tbody>
        </table>

        </div>
      <br>
      <%= link_to 'New Inventory', new_inventory_path , class: "radius button center"%>
    </div>    
  </div>
  <br>
  <%end %>
</div>
</div>
