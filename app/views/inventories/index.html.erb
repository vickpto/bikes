<div class="panel">
  <%if @products.nil?  %>
  <div class="row">
    <div class="small-8 large-centered columns">
      <h1 align="center">Aun no se ha registrado ningun inventario</h1>
    </div>
    <%else%>
    <div class="row">
      <div class="small-12 large-centered columns">
        <h1>Inventario - La Ciclería</h1>
      </div>
      <div class="small-12 large-centered columns">
        <table>
          <thead>
            <tr>
              <th>Tipo de producto</th>
              <th>Producto</th>
              <th>Referencia</th>
              <th>Cantidad</th>
              <th>Fecha de registro</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @products.each do |inventory| %>
            <tr>
              <td>
                <% if inventory[0].to_s == 'BIKE' %>
                  Bicicleta 
                <% end %>
                <% if  inventory[0].to_s == 'EQUIPMENT'%>
                Equipación
                <% else %>
                Accesorio-Repuesto
                <% end %>
             </td>
              <td><%= inventory[1] %></td>
              <td><%= inventory[2] %></td>
              <td><%= inventory[3]%></td>
              <td><%= inventory[4] %></td>
              <td><%= link_to 'Ver', inventory_path(:id => inventory[5]), class: "small button success" %>
              <%= link_to 'Editar', edit_inventory_path(:id =>inventory[5]), class: "small button success" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>

        </div>
      <br>
      <%= link_to 'Nuevo Inventario', new_inventory_path , class: "radius button center"%>
    </div>    
  </div>
  <br>
  <%end %>
</div>
</div>
