<%= form_for(@inventory) do |f| %>
<% if @inventory.errors.any? %>
<div class="row">
  <div class="small-8 large-centered columns">
    <div data-alert class="alert-box alert radius">
      <%= pluralize(@inventory.errors.count, "error") %> no permite guardar la informaciÃ³n del inventario
      <ul>
        <% @inventory.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
      <a href="#" class="close">&times;</a>
    </div>
  </div>
</div>
<% end %>


<div class="row">
  <div class="small-8">
    <div class="row">
      <div class="small-3 columns">
        <label for="right-label" class="right inline">Referencia</label>
      </div>
      <div class="small-9 columns">
        <%= f.collection_select :productId, @products, :productId, :productName, include_blank: true %>
      </div>
    </div>
  </div>
</div>
<br>

<div class="row">
  <div class="small-8">
    <div class="row">
      <div class="small-3 columns">
        <label for="right-label" class="right inline">Cantidad</label>
      </div>
      <div class="small-9 columns">
        <%= f.number_field :productAmount, :required =>true %>
      </div>
    </div>
  </div>
</div>
<br>

<div class="row">
  <div class="small-4 large-centered columns"><%= f.submit "Guardar", class: "button success radius" %>
  </div>
</div>
<% end %>
