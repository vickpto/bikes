<div class="row">
  <div class="large-4 small-12 columns">
    <div class="section-container vertical-nav" data-section data-options="deep_linking: false; one_up: true">
      <section class="section">
        <h5 class="title"><a href="#bike">Bicicletas</a></h5>
      </section>
      <section class="section">
        <h5 class="title"><a href="#equipment">Equipaciones</a></h5>
      </section>
      <section class="section">
        <h5 class="title"><a href="#accesory">Repuestos y Accesorios</a></h5>
      </section>
    </div>
  </div>


  <div class="large-8 columns">
    <div class="row">


      <div id="bike">
        <hr>
        <a name="bike"><h2 align="center">BICICLETAS</h2></a>
        <% if @productsB.empty? %>
        <h3>Aun no se ha registrado ninguna bicicleta</h3>
        <% else%>
        <% @productsB.each do |product| %>
        <div class="large-4 small-6 columns">
          <%= image_tag product.image.url%>
          <div class="panel">
            <h5><%= product.productName %> - <%= product.productTradeMark %></h5>
            <h6 class="subheader"><%= product.productPrice %> COP</h6>
            <%= link_to 'Ver mas', bike_path(product) , class: "small button center"%>
          </div>
        </div>
        <% end %>
        <% end %>
      </div>



      
      <div id="equipment">
        <hr>
        <a name="equipment"><h2 align="center">EQUIPACIONES</h2></a>
        <% if @productsE.empty? %>
        <h3>Aun no se ha registrado ninguna equipaci√≥n</h3>
        <% else%>
        <% @productsE.each do |product| %>
        <div class="large-4 small-6 columns">
          <%= image_tag product.image.url%>
          <div class="panel">
            <h5><%= product.productName %> - <%= product.productTradeMark %></h5>
            <h6 class="subheader"><%= product.productPrice %> COP</h6>
            <%= link_to 'Ver mas', equipment_path(product) , class: "small button center"%>
          </div>
        </div>
        <% end %>
        <% end %>
      </div>

      
      <div id="accesory">
        <hr>
        <a name="accesory"><h2 align="center"> REPUESTOS Y ACCESORIOS</h2></a>
        <% if @productsA.empty? %>
        <h3>Aun no se ha registrado ningun accesorio o repuesto</h3>
        <% else%>
        <% @productsA.each do |product| %>
        <div class="large-4 small-6 columns">
          <%= image_tag product.image.url%>
          <div class="panel">
            <h5><%= product.productName %> - <%= product.productTradeMark %></h5>
            <h6 class="subheader"><%= product.productPrice %> COP</h6>
            <%= link_to 'Ver mas', accesory_part_path(product) , class: "small button center"%>
          </div>
        </div>
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>