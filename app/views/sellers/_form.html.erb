<%= form_for(@seller) do |f| %>
<% if @seller.errors.any? %>
<div class="row">
  <div class="small-8 large-centered columns">
    <div data-alert class="alert-box alert radius">
      <%= pluralize(@seller.errors.count, "error") %> no permite guardar el vendedor
      <ul>
        <% @seller.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
      <a href="#" class="close">&times;</a>
    </div>
  </div>
</div>
<% end %>  
<div class="row">
  <div class="small-8">
    <div class="row">
      <div class="small-3 columns">
        <label for="right-label" class="right inline">Documento</label>
      </div>
      <div class="small-9 columns">
        <%= f.number_field :document, autofocus: true, :required =>true, :input_html => {:minlength => 8 , maxlength: 10} %>
      </div>
    </div>
  </div>
</div>

<p>            </p>

<div class="row">
  <div class="small-8">
    <div class="row">
      <div class="small-3 columns">
        <label for="right-label" class="right inline">Nombre</label>
      </div>
      <div class="small-9 columns">
        <%= f.text_field :username, :required =>true, :maxlength =>50 %>
      </div>
    </div>
  </div>
</div>

<p>            </p>

<div class="row">
  <div class="small-8">
    <div class="row">
      <div class="small-3 columns">
        <label for="right-label" class="right inline">Apellidos</label>
      </div>
      <div class="small-9 columns">
        <%= f.text_field :userLastName, :required =>true, :maxlength =>50 %>
      </div>
    </div>
  </div>
</div>

<p>            </p>

<div class="row">
  <div class="small-8">
    <div class="row">
      <div class="small-3 columns">
        <label for="right-label" class="right inline">Numero telefonico</label>
      </div>
      <div class="small-9 columns">
        <%= f.text_field :telephone, :required =>true, :maxlength =>20 %>
      </div>
    </div>
  </div>
</div>

<p>            </p>

<div class="row">
  <div class="small-8">
    <div class="row">
      <div class="small-3 columns">
        <label for="right-label" class="right inline">Correo electronico</label>
      </div>
      <div class="small-9 columns">
        <%= f.email_field :email, :required =>true, :maxlength =>50, :pattern => '[^@]+@[^@]+\.[a-zA-Z]{2,6}' %>
      </div>
    </div>
  </div>
</div>



  
</div>
<p></p>
<div class="row">
  <div class="small-4 large-centered columns"><%= f.submit "Guardar", class: "button success radius" %>
  </div>
</div>
<p>            </p>
<% end %>
