<div class="panel">
	<div class="row">
		<div class="large-12 columns">
			<h2>Inicia sesion</h2>

			<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
			<div class="row">
				<div class="small-8">
					<div class="row">
						<div class="small-3 columns">
							<label for="right-label" class="right inline">Correo Electronico</label>
						</div>
						<div class="small-9 columns">
							<%= f.email_field :email, autofocus: true %>
						</div>
					</div>
				</div>
			</div>
			<p>            </p>
			<div class="row">
				<div class="small-8">
					<div class="row">
						<div class="small-3 columns">
							<label class="right inline">Contrase√±a</label>
						</div>
						<div class="small-9 columns">
							<%= f.password_field :password, autocomplete: "off" %>
						</div>
					</div>
				</div>
			</div>
			<p>            </p>
			<div class="row">
				<div class="small-8">
					<div class="row">
						<div class="small-3 columns">
							<label class="right inline">Mantener mi sesion</label>
						</div>
						<div class="small-9 columns">
							<% if devise_mapping.rememberable? -%>
							<%= f.check_box :remember_me %> 
							<% end -%>
						</div>
					</div>
				</div>
			</div>
			<p>            </p>
			

			<div class="row">
				<div class="small-4 large-centered columns"><%= f.submit "Ingresar", class: "radius button center" %></div>
				<div class="small-4 large-centered columns">
				<%= render "devise/shared/links" %>
				</div>
			</div>
			<% end %>


		</div>
	</div>
</div>
