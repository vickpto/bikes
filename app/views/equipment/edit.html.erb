<div class="panel ">
	<div class="row">
		<div class="large-8 columns">
			<h2>Editando equipación </h2>
		</div>
	</div>

	<%= form_for(@product, html: {:multipart => true}) do |f| %>
	<% if @product.errors.any? %>
	<div class="row">
		<div class="small-8 large-centered columns">
			<div data-alert class="alert-box alert radius">
				<%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:
				<ul>
					<% @product.errors.full_messages.each do |message| %>
					<li><%= message %></li>
					<% end %>
				</ul>
				<a href="#" class="close">&times;</a>
			</div>
		</div>
	</div>
</div>
<% end %>

<%= f.hidden_field :typeProduct , :value => 'EQUIPMENT' %>

<div class="row">
	<div class="small-8">
		<div class="row">
			<div class="small-3 columns">
				<label for="right-label" class="right inline">Referencia</label>
			</div>
			<div class="small-9 columns">
				<%= f.text_field :productReference , autofocus: true, :required => true, :maxlength => 10 %>
			</div>
		</div>
	</div>
</div>
<br>

<div class="row">
	<div class="small-8">
		<div class="row">
			<div class="small-3 columns">
				<label for="right-label" class="right inline">Nombre de equipación</label>
			</div>
			<div class="small-9 columns">
				<%= f.text_field :productName, :required =>true, :maxlength =>50 %>
			</div>
		</div>
	</div>
</div>
<br>

<div class="row">
	<div class="small-8">
		<div class="row">
			<div class="small-3 columns">
				<label for="right-label" class="right inline">Marca</label>
			</div>
			<div class="small-9 columns">
				<%= f.text_field :productTradeMark, :required=>true, :maxlength =>50 %>
			</div>
		</div>
	</div>
</div>
<br>

<div class="row">
	<div class="small-8">
		<div class="row">
			<div class="small-3 columns">
				<label for="right-label" class="right inline">Precio</label>
			</div>
			<div class="small-9 columns">
				<%= f.number_field :productPrice, :required =>true, :maxlength =>50%>
			</div>
		</div>
	</div>
</div>
<br>


<div class="row">
	<div class="small-8">
		<div class="row">
			<div class="small-3 columns">
				<label for="right-label" class="right inline">Descripción</label>
			</div>
			<div class="small-9 columns">
				<%= f.text_field :productDescription, :required =>true, :maxlength =>300 %>
			</div>
		</div>
	</div>
</div>
<br>

<div class="row">
	<div class="small-8">
		<div class="row">
			<div class="small-3 columns">
				<label for="right-label" class="right inline">Genero</label>
			</div>
			<div class="small-3 columns centered">
				<%= f.radio_button :gender, "M", :checked => true %> 
				<%= label :gender, 'Masculino' %>
				<%= f.radio_button :gender, "F" %>
				<%= label :gender, 'Femenino' %>
			</div>
			<div class="small-3 columns">
				<label for="right-label" class="right inline">Talla</label>
			</div>
			<div class="small-2 columns">
				<%= f.select :size, [["S", "S"], ["M", "M"], ["L", "L"] , ["XL", "XL"]] %>
			</div>
		</div>
	</div>
</div>
<br>

<div class="row">
	<div class="small-8">
		<div class="row">
			<div class="small-3 columns">
				<label for="right-label" class="right inline">Imagen</label>
			</div>
			<div class="small-9 columns">
				<label><i>Si no desea modificar la imagen de este producto, no seleccione ningun archivo</i></label>
				<%= f.file_field :image%>
			</div>
		</div>
	</div>
</div>
<br>

<div class="row">
	<div class="small-4 large-centered columns"><%= f.submit "Guardar", class: "button success radius" %>
	</div>
</div>

<% end %>



<div class="row">
	<div class="large-9 columns">
		<div class="actions">
			<%= link_to '← Volver', equipment_index_path %>
		</div>
	</div>
</div>
</div>
