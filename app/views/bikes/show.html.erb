<div class="row">

  <div class="large-6 columns">
      <%= image_tag @product.image.url%>
  </div>

  <div class="large-6 columns">

    <h3 class="show-for-small">Header<hr/></h3>

    <div class="panel">
      <h4 class="hide-for-small"><%= @product.productTradeMark %> - <%= @product.productName %> (<%= @product.typeProduct %>)<hr/></h4>
      <h5 class="subheader"><%= @product.productDescription %></h5>
      <h5 class="subheader"><strong>Medidas: </strong><%= @product.measures %></h5>
      <h5 class="subheader"><strong>Precio:</strong> <%= @product.productPrice %> COP$</h5>
    </div>

    <div class="row">
      <div class="large-6 small-6 columns">
        <div class="panel">
          <h5>Referencia</h5>
          <h6 class="subheader"><%= @product.productReference %></h6>
          <%= link_to 'Volver', bikes_path , class: "small button radius"%>
        </div>
      </div>

      <%if user_signed_in? && current_user.userType == "Seller"%>
      <div class="large-6 small-6 columns">
        <div class="panel">
          <h5>Id - Estado</h5>
          <h6 class="subheader">
            <%= @product.productId %> -
            <%if @product.productStatus == true %>
            Habilitado
            <%else%>
            Deshabilitado
            <%end%>
          </h6>
          <%= link_to 'Editar', edit_bike_path(@product) , class: "small button success radius"%> 
        </div>
      </div>
      <%end%>
    </div>

  </div>

</div>

