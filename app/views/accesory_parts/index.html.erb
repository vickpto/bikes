<div class="panel">
  <%if @products.empty?  %>
  <p>            </p>
  <div class="row">
    <div class="small-8 large-centered columns">
      <h1 align="center"> Aun no se ha registrado repuestos o accesorios</h1>
    </div>
  </div>
  <%else%>
  <div class="row">
    <div class="small-12 large-centered columns">
      <h1>Lista de Repuestos y Accesorios - La Ciclería</h1>
    </div>
    <div class="small-12 large-centered columns">

      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Referencia</th>
            <th>Nombre producto</th>
            <th>Marca</th>
            <th>Precio</th>
            <th>Estado</th>
            <th>Descripción</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @products.each do |product| %>
          <% if product.typeProduct == 'ACCESORY'%>
          <tr>
            <td><%= product.productId %></td>
            <td><%= product.productReference %></td>
            <td><%= product.productName %></td>
            <td><%= product.productTradeMark %></td>
            <td><%= product.productPrice %></td>
            <td><%= product.productStatus %></td>
            <td><%= product.productDescription %></td>
            <td><%= link_to 'Show', accesory_part_path(product) %></td>
            <td><%= link_to 'Edit', edit_accesory_part_path(product) %></td>
            <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
          <% end %>
        </tbody>
      </table>

      <br>

      
      <br>
    </div>
    <br>
    <%= link_to 'New Accesory part', new_product_path %> | 
    <%= link_to 'Generar reporte', products_path(:pdf) %>
  </div>
</div>
<%end%>
</div>


