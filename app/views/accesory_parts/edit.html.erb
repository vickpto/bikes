<div class="row">
	<div class="small-8">
		<br>
		<br>
		<br>
		<h1>Editar Accesorio - Parte</h1>
	</div>
</div>

<%= form_for(@product, html: {:multipart => true}) do |f| %>
<% if @product.errors.any? %>
<div class="row">
	<div class="small-8 large-centered columns">
		<div data-alert class="alert-box alert radius">
			<%= pluralize(@product.errors.count, "error") %> no permite guardar la información del accesorio o repuesto
			<ul>
				<% @product.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
			<a href="#" class="close">&times;</a>
		</div>
	</div>
</div>
<% end %>

<%= f.hidden_field :typeProduct , :value => 'ACCESORY' %>

<div class="row">
	<div class="small-8">
		<div class="row">
			<div class="small-3 columns">
				<label for="right-label" class="right inline">Referencia</label>
			</div>
			<div class="small-9 columns">
				<%= f.text_field :productReference, autofocus: true, :required =>true, :maxlength => 10 %>
			</div>
		</div>
	</div>
</div>
<br>

<div class="row">
	<div class="small-8">
		<div class="row">
			<div class="small-3 columns">
				<label for="right-label" class="right inline">Nombre del producto</label>
			</div>
			<div class="small-9 columns">
				<%= f.text_field :productName , :required =>true, :maxlength =>50%>
			</div>
		</div>
	</div>
</div>
<br>

<div class="row">
	<div class="small-8">
		<div class="row">
			<div class="small-3 columns">
				<label for="right-label" class="right inline">Marca</label>
			</div>
			<div class="small-9 columns">
				<%= f.text_field :productTradeMark, :required =>true ,:maxlength =>50 %>
			</div>
		</div>
	</div>
</div>
<br>

<div class="row">
	<div class="small-8">
		<div class="row">
			<div class="small-3 columns">
				<label for="right-label" class="right inline">Precio</label>
			</div>
			<div class="small-9 columns">
				<%= f.number_field :productPrice , :required =>true ,:maxlength=>50 %>
			</div>
		</div>
	</div>
</div>
<br>

<div class="row">
	<div class="small-8">
		<div class="row">
			<div class="small-3 columns">
				<label for="right-label" class="right inline">Descripción</label>
			</div>
			<div class="small-9 columns">
				<%= f.text_field :productDescription, :required =>true, :maxlength =>300 %>
			</div>
		</div>
	</div>
</div>
<br>


<div class="row">
	<div class="small-8">
		<div class="row">
			<div class="small-3 columns">
				<label for="right-label" class="right inline">Imagen</label>
			</div>
			<div class="small-9 columns">
				<label><i>Si no desea modificar la imagen de este producto, no seleccione ningun archivo</i></label>
				<%= f.file_field :image%>
			</div>
		</div>
	</div>
</div>
<br>


<div class="row">
	<div class="small-4 large-centered columns"><%= f.submit "Guardar", class: "button success radius" %>
	</div>
</div>
<% end %>


<div class="row">
	<div class="small-8">
		<%= link_to '← Volver', accesory_parts_path %>
	</div></div>



