<div class="panel">
  <%if @sales.empty?  %>
  <p>            </p>
  <div class="row">
    <div class="small-8 large-centered columns">
      <h1 align="center">Aun no se ha registrado ninguna venta</h1>
    </div>
  </div>
  <%else%>
  <div class="row">
    <div class="small-12 large-centered columns">
      <h1>Lista de ventas - La Cicler√≠a</h1>
    </div>
    <div class="small-12 large-centered columns">
      <table>
        <thead>
          <tr>
            <th width="20">Id</th>
            <th width="50">Vendedor</th>
            <th width="50">Cliente</th>
            <th width="20">Fecha</th>
            <th>Salestatus</th>
            <th>Observaciones</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @sales.each do |sale| %>
          <tr>
            <td><%= sale.saleId %></td>
            <td><%= sale.sellerId %></td>
            <td><%= sale.clientId %></td>
            <td><%= sale.saleDate %></td>
            <td><%= sale.saleStatus %></td>
            <td><%= sale.note %></td>
            <td><%= link_to 'Show', sale %></td>
            <td><%= link_to 'Edit', edit_sale_path(sale) %></td>
            <td><%= link_to 'Destroy', sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <br>

    <div class="small-4 large-centered columns"><%= link_to "Crear Reporte", new_seller_path, class: "button success radius"%>  </div>
  </div>
</div>
<%end%>
</div>